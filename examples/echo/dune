(executable
 (name        test)
 (libraries   ocaml-protoc-plugin ocaml-protoc-plugin.google_types unix)
)

(rule
 (targets echo.ml)
 (deps
  (:proto echo.proto) (package ocaml-protoc-plugin))
 (action
  (run protoc -I . "--ocaml_out=open=Google_types:." %{proto})))

(alias
 (name runtest)
 (deps test.exe)
)
